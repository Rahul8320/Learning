<html>
  <%- include("layouts/header") %>

  <body style="background-color: rgb(221, 221, 221)">
    <%- include("layouts/navbar") %>

    <div class="container mx-auto mt-2">
      <a href="/student" class="fs-5"
        ><i class="fa fa-search me-1"></i> Back to Search</a
      >
    </div>

    <div class="container my-5 d-flex justify-content-center items-center">
      <div class="col-md-9 bg-white p-4 shadow-lg rounded-3">
        <% if (message) { %>
        <div
          class="alert alert-<%= message.type %> alert-dismissible fade show"
          role="alert"
        >
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>

          <strong> <%= message.message %> </strong>
        </div>
        <% } %> <% if (student ) { %>
        <h2>Result</h2>
        <div class="mx-auto p-2 row">
          <div class="col-md-4">
            <img
              src="/uploads/<%= student.image %>"
              alt="Student Image"
              width="250"
            />
            <h3 class="mx-5 px-5"><%= student.name %></h3>
          </div>
          <div class="col-md-7 mx-2 border-2 border rounded-3">
            <p>Name : <%= student.name %></p>
            <p>Roll No : <%= student.rollNo %></p>
            <p>
              Date Of Birth : <%= student.dateOfBirth.toString().substring(0,15)
              %>
            </p>
            <p>Score : <%= student.score %></p>
            <p>Created At : <%= student.created_at %></p>
            <p>Updated at : <%= student.updated_at %></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <%- include ("layouts/footer") %>
  </body>
</html>
